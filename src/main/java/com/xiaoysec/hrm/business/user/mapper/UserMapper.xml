<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.xiaoysec.hrm.business.user.mapper.UserMapper">
  	<select id="getUserById" parameterType="Integer" resultType="User">
  		select * from user_info where id=#{id};
  	</select>
  	
  	<select id="getUserByLoginNameAndPassword"  parameterType="User" resultType="User">
  		select * from user_info where loginname=#{loginname} and password=#{password}
  	</select>
 
  </mapper>